%h2
  = @deck.name
.row
  .col-md-1
  .col-md-11
    = form_for @card, url: deck_path(@deck), html: { method: 'patch' } do |f|
      .row
        .col-xs-2.col-xs-offset-1
          .form-group
            = f.select :set, @sets, { selected: @most_recent_set }, class: 'form-control'
        .col-xs-3
          .form-group
            = f.number_field :number, class: 'form-control', autofocus: "true", placeholder: "Card No."
        .col-xs-1
          = f.submit "Add Card", class: 'btn btn-default'

.row
  - (1..6).each do |i|
    .col-xs-2
      %h4= i < 6 ? i : '6+'
      %ul.list-unstyled
        - if i < 6
          - @deck.cards.where(cmc: i).each do |card|
            %li #{card.name}   #{card.mana_cost}
        - else
          - @deck.cards.where(cmc: (6..10000)).each do |card|
            %li #{card.name}   #{card.mana_cost}
